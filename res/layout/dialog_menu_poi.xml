<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MenuPoiGridLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="6"
    android:orientation="horizontal"
    android:rowCount="2"
    tools:context=".VehiculeModeActivity" >

    <ImageButton
        android:id="@+id/BtnPolice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pressed_96_onmenu"
        android:contentDescription="@string/BtnPoliceDescription"
        android:src="@drawable/police_96" />

    <ImageButton
        android:id="@+id/BtnHazard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pressed_96_onmenu"
        android:contentDescription="@string/BtnHazardDescription"
        android:src="@drawable/hazard_96" />

    <ImageButton
        android:id="@+id/BtnTrafficJam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pressed_96_onmenu"
        android:contentDescription="@string/BtnTrafficJamDescription"
        android:src="@drawable/trafficjam_96" />

    <ImageButton
        android:id="@+id/BtnAccident"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pressed_96_onmenu"
        android:contentDescription="@string/BtnAccidentDescription"
        android:src="@drawable/accident_96" />

    <ImageButton
        android:id="@+id/BtnSpeedCam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pressed_96_onmenu"
        android:contentDescription="@string/BtnSpeedCamDescription"
        android:src="@drawable/speedcam_96" />

    <ImageButton
        android:id="@+id/BtnAquaplaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pressed_96_onmenu"
        android:contentDescription="@string/BtnAquaplaningDescription"
        android:src="@drawable/aquaplaning_96" />

</GridLayout>